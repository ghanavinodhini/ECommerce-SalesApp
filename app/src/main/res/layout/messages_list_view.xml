<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    android:id="@+id/allMessagesCardView"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardElevation="2dp"
    app:cardCornerRadius="8dp"
    app:cardPreventCornerOverlap="false"
    app:cardUseCompatPadding="true"
    app:cardBackgroundColor="@color/cardColor"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/allMessages_listView"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/allMessages_ImageView"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_marginLeft="4dp"
            android:layout_marginTop="4dp"
            android:layout_marginBottom="4dp"
            android:src="@drawable/person"
            android:padding="4dp"
            android:adjustViewBounds="true"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>

        <TextView
            android:id="@+id/allMessages_productTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="@color/btnColor"
            android:layout_marginTop="8dp"
            android:layout_marginLeft="10dp"
            app:layout_constraintLeft_toRightOf="@id/allMessages_ImageView"
            app:layout_constraintTop_toTopOf="parent" />


        <TextView
            android:id="@+id/allMessages_productPrice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""
            android:textSize="12sp"
            android:textStyle="italic"
            android:textColor="@color/btnColor"
            android:layout_marginTop="4dp"
            android:layout_marginLeft="10dp"
            app:layout_constraintLeft_toRightOf="@id/allMessages_ImageView"
            app:layout_constraintTop_toBottomOf="@id/allMessages_productTitle" />

        <TextView
            android:id="@+id/allMessages_buyerMessage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""
            android:textSize="12sp"
            android:textStyle="italic"
            android:textColor="@color/btnColor"
            android:layout_marginTop="4dp"
            android:layout_marginLeft="10dp"
            app:layout_constraintLeft_toRightOf="@id/allMessages_ImageView"

            app:layout_constraintTop_toBottomOf="@id/allMessages_productPrice" />

        <TextView
            android:id="@+id/allMessages_buyerEmail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""
            android:textSize="12sp"
            android:textStyle="italic|bold"
            android:layout_marginTop="4dp"
            android:layout_marginLeft="10dp"
            android:layout_marginBottom="8dp"
            app:layout_constraintLeft_toRightOf="@id/allMessages_ImageView"

            app:layout_constraintTop_toBottomOf="@id/allMessages_buyerMessage" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.cardview.widget.CardView>